<h1>Mønstringer per fylke</h1>

{% for fylke in fylker %}
	<h2>{{ fylke.info.getNavn() }} <small>{{ fylke.info.getKommuner().count() }} kommuner</small></h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>År</th>
				<th>Antall kommuner</th>
				<th>Komuner involvert <br />i en mønstring</th>
				<th>Antall arrangerte<br />mønstringer</th>
				<th class="text-danger">Uregistrerte<br />mønstringer</th>
				<th class="text-danger">Kommuner involvert <br />uregistrerte kommuner</th>
			</tr>
		</thead>
		<tbody>
			{% for i in startyear..stopyear %}
				<tr>
					<th><a href="?page=UKMrapport_admin&network=monstringer_i_fylket&fylke={{fylke.info.getId()}}&sesong={{i}}">{{ i }}</a></th>
					<td>
						{{ fylke.info.getKommuner().count() }}
					</td>
					<td>
						{{ fylke.monstringer[i].kommuner_registrert }}
					</td>
					<td>{{ fylke.monstringer[i].registrert }}</td>
					<td {{ fylke.monstringer[i].uregistrert > 0 ? 'class="text-danger"' : '' }}>
						{{ fylke.monstringer[i].uregistrert }}
					</td>
					<td {{ fylke.monstringer[i].uregistrert > 0 ? 'class="text-danger"' : '' }}>
						{{ fylke.monstringer[i].kommuner_uregistrert }}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endfor %}