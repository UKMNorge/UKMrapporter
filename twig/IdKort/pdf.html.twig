<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <style>
        @page { size: A4 portrait; margin: 0; }
        body { margin: 0; padding: 0; font-family: 'TWKBurns Ultra', Arial, sans-serif; font-weight: normal; }
        * { font-family: 'TWKBurns Ultra', Arial, sans-serif; font-weight: normal; }

        @font-face {
            font-family: 'TWKBurns Ultra';
            src: url('{{ fontPath }}') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        .page {
            width: 210mm;
            height: 297mm;
            background: {{ theme.background }};
            color: {{ theme.textColor }};
            box-sizing: border-box;
            padding: 0;
            position: relative;
            page-break-after: always;
        }

        .card {
            position: absolute;
            width: 54mm;
            height: 85.6mm;
            padding: 2.5mm 1.5mm;
            box-sizing: border-box;
            text-align: center;
            border: 1pt dashed {{ theme.borderColor|default('rgba(0, 0, 0, 0.35)') }};
        }

        .hole {
            position: absolute;
            top: 2.5mm;
            left: 50%;
            width: 12mm;
            height: 2mm;
            margin-left: -8mm;
            background: #f5eee4;
            border-radius: 2mm;
        }

        .card-inner {
            position: absolute;
            top: 4mm;
            left: 0;
            right: 0;
            bottom: 26mm;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }

        .logo {
            width: 125%;
            max-width: 70mm;
            height: auto;
            margin-top: 10;
            margin-bottom: 2mm;
        }

        .name {
            white-space: normal;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow-wrap: anywhere;
            word-break: break-all;
            line-height: 1.2;
            margin: 0;
            position: relative;
            text-align: left;
            width: 100%;
            padding: 0.4mm 6.5mm 0 4mm;
            box-sizing: border-box;
            min-height: 14mm;
            max-height: 14mm;
            margin-top: 10mm;
        }

        .role {
            font-size: 18pt;
            word-break: break-word;
            position: absolute;
            left: 2.0mm;
            right: 0;
            bottom: 2mm;
            margin: 0;
            line-height: 1.05;
            text-align: left;
            width: 100%;
            padding: 0 2.5mm;
            box-sizing: border-box;
            font-family: 'Inter', Arial, sans-serif;
        }
    </style>
</head>
<body>
{% set marginX = 14 %}
{% set marginY = 10.1 %}
{% set cardW = 54 %}
{% set cardH = 85.6 %}
{% set gapX = 10 %}
{% set gapY = 10 %}

{% for page in personer|batch(9, []) %}
    <div class="page">
        {% for person in page %}
            {% if person is not empty %}
                {% set idx = loop.index0 %}
                {% set row = (idx // 3) %}
                {% set col = (idx % 3) %}
                {% set left = marginX + col * (cardW + gapX) %}
                {% set top = marginY + row * (cardH + gapY) %}

                {% set explicitGivenName = person.fornavn|default('')|trim %}
                {% set fullName = person.navn|default('')|trim %}
                {% set nameParts = fullName|split(' ') %}
                {% if explicitGivenName %}
                    {% set nameText = explicitGivenName %}
                {% elseif nameParts|length > 1 %}
                    {% set nameText = nameParts|slice(0, nameParts|length - 1)|join(' ') %}
                {% else %}
                    {% set nameText = fullName %}
                {% endif %}
                {% if nameText is empty %}
                    {% set nameText = fullName is empty ? 'Navn' : fullName %}
                {% endif %}
                {% set nameLen = nameText|length %}
                    {% if nameLen > 30 %}
                        {% set nameSize = 10 %}
                    {% elseif nameLen > 26 %}
                        {% set nameSize = 11 %}
                    {% elseif nameLen > 22 %}
                        {% set nameSize = 12 %}
                    {% elseif nameLen > 19 %}
                        {% set nameSize = 13 %}
                    {% elseif nameLen > 16 %}
                        {% set nameSize = 14 %}
                    {% elseif nameLen > 13 %}
                        {% set nameSize = 15 %}
                    {% elseif nameLen > 10 %}
                        {% set nameSize = 16 %}
                    {% else %}
                        {% set nameSize = 18 %}
                    {% endif %}

                {% set roleText = person.rolle|default('') %}
                {% set roleWords = roleText|split(' ') %}
                {% set roleWordCount = roleWords|length %}
                {% set roleLen = roleText|length %}
                {% if roleWordCount >= 3 %}
                    {% set roleSize = 18 %}
                {% elseif roleWordCount == 2 %}
                    {% set roleSize = 16 %}
                {% elseif roleLen > 12 %}
                    {% set roleSize = 16 %}
                {% elseif roleLen > 9 %}
                    {% set roleSize = 18 %}
                {% else %}
                    {% set roleSize = 20 %}
                {% endif %}

                <div class="card" style="left: {{ left }}mm; top: {{ top }}mm;">
                    <div class="hole"></div>
                    <div class="card-inner">
                        <img class="logo" src="{{ logoDataUri ? logoDataUri : logoPathRel }}" alt="UKM logo" />
                        <div class="name" style="font-size: {{ nameSize }}pt;">{{ nameText }}</div>
                    </div>
                    <div class="role" style="font-size: {{ roleSize }}pt;">{{ roleText }}</div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endfor %}
</body>
</html>
