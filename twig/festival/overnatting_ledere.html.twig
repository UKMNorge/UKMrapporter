<h3>Status enkeltrom</h3>
<div class="UKMwidth">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Gruppe</th>
				{% for natt in alle_netter %}
					<th>{{natt.timestamp|dato('d.m')}}</th>
				{% endfor %}
			</tr>
		</thead>
		<tbody>
			{% for gruppe,netter in count.enkel if gruppe != 'total' %} 
				<tr>
					<td>{{gruppe|capitalize}}</td>
					{% for natt in alle_netter %} 
						<td>{{count.enkel[gruppe][ natt.dag~'.'~natt.mnd ]}}</td>
					{% endfor %}
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			{% for gruppe,netter in count.enkel if gruppe == 'total' %} 
				<tr>
					<th>{{gruppe|capitalize}}</th>
					{% for natt in alle_netter %} 
						<th>{{count.enkel[gruppe][ natt.dag~'.'~natt.mnd ]}}</th>
					{% endfor %}
				</tr>
			{% endfor %}
		</tfoot>
	</table>
</div>

