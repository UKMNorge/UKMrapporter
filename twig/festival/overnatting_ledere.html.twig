{% for romtype,kapasitet in romtyper %}
	<h3>Status {{ romtype }}rom</h3>
	<div class="UKMwidth">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Gruppe</th>
					{% for natt in alle_netter %}
						<th>{{natt.timestamp|dato('d.m')}}</th>
					{% endfor %}
					<th>Sum</th>
				</tr>
			</thead>
			<tbody>
				{% for gruppe,netter in count[romtype] if gruppe != 'total' %} 
					{% set linjesum = 0 %}
					<tr>
						<td>{{gruppe|capitalize}}</td>
						{% for natt in alle_netter %}
							{% set linjesum = linjesum + count[romtype][gruppe][ natt.dag~'.'~natt.mnd ]|length %}
							<td>{{count[romtype][gruppe][ natt.dag~'.'~natt.mnd ]|length}}</td>
						{% endfor %}
						<th>{{ linjesum }}</th>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				{% for gruppe,netter in count[romtype] if gruppe == 'total' %} 
					{% set linjesum = 0 %}
					<tr>
						<th>{{gruppe|capitalize}}</th>
						{% for natt in alle_netter %} 
							{% set linjesum = linjesum + count[romtype][gruppe][ natt.dag~'.'~natt.mnd ]|length %}
							<th>{{count[romtype][gruppe][ natt.dag~'.'~natt.mnd ]|length}}</th>
						{% endfor %}
						<th>{{ linjesum }}</th>
					</tr>
				{% endfor %}
			</tfoot>
		</table>
	</div>
{% endfor %}