<div class="clearfix"></div>
<div class="row">
    <div class="col-12 col-sm-12">
        <h3>{{ title }}</h3>
    </div>
    <div class="col-12 col-sm-10">
        <div class="previewList" id="previewList_{{id}}">
            <ol class="list-group options"> {% block options %}{% endblock %}
            </ol>
            <div class="preview">
                <label class="uppercase">Forh√•ndsvisning</label>
                {% block previews %}
                    Velg visning
                {% endblock %}
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on('click', '#previewList_{{ id }} .option', function(e) {
        $(e.target).find('input').click();
    });

    $(document).on('click', '#previewList_{{ id }} .option label', function(e) {
        $(e.target).parents('li.option').find('input').click();
    });

    $(document).on('change', '#previewList_{{ id }} input', function(e) {
        $('#previewList_{{ id }}').find('.preview .option').hide();
        $('#previewList_{{ id }}').find('#preview_' + $(e.target).val()).fadeIn();
    });
</script>