<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <style>
        @page { size: A4 portrait; margin: 0; }
        body { margin: 0; padding: 0; font-family: 'TWKBurns Ultra', Arial, sans-serif; font-weight: normal; }
        * { font-family: 'TWKBurns Ultra', Arial, sans-serif; font-weight: normal; }

        @font-face {
            font-family: 'TWKBurns Ultra';
            src: url('{{ fontPath }}') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        .page {
            width: 595pt;
            height: 842pt;
            background: {{ theme.background }};
            color: {{ theme.textColor }};
            box-sizing: border-box;
            padding: 42pt 0 0 0;
            position: relative;
            overflow: hidden;
        }

        .content {
            font-size: 36px;
            line-height: 1.1;
            padding-left: 34pt;
        }

        .line { 
            margin: 0;
            font-size: 24px; 
        }

        .name-line,
        .place-line,
        .season-line {
            font-size: 44px;
            margin-top: -12pt;
        }

        .logo-wrapper {
            text-align: center;
            padding: 0;
            margin: -40pt 0 0 0;
        }

        .logo {
            width: 740pt;
            height: auto;
        }

        .footer {
            position: absolute;
            bottom: 30pt;
            left: 0;
            right: 0;
            font-family: 'TWKBurns Ultra', Arial, sans-serif;
            font-weight: normal;
            font-size: 200px;
            text-align: center;
        }
    </style>
</head>
<body>
{% for person in personer %}
    {% set nameLen = person.navn|length %}
    {% set nameSize = 44 %}
    {% if nameLen > 38 %}
        {% set nameSize = 28 %}
    {% elseif nameLen > 30 %}
        {% set nameSize = 32 %}
    {% elseif nameLen > 22 %}
        {% set nameSize = 36 %}
    {% endif %}

    {% set placeLen = placeLabel|length %}
    {% set placeSize = 44 %}
    {% if placeLen > 38 %}
        {% set placeSize = 28 %}
    {% elseif placeLen > 30 %}
        {% set placeSize = 32 %}
    {% elseif placeLen > 22 %}
        {% set placeSize = 36 %}
    {% endif %}
    <div class="page">
        <div class="content">
            <p class="line">Navn</p>
            <p class="line name-line" style="font-size: {{ nameSize }}px;">{{ person.navn }}</p>
            <p class="line">Sted</p>
            <p class="line place-line" style="font-size: {{ placeSize }}px;">{{ placeLabel }}</p>
            <p class="line">Ã…r</p>
            <p class="line season-line">{{ seasonLabel }}</p>
        </div>
        <div class="logo-wrapper">
            <img class="logo" src="{{ logoDataUri ? logoDataUri : logoPathRel }}" alt="UKM logo" />
        </div>
        <div class="footer">Diplom</div>
    </div>
{% endfor %}
</body>
</html>
